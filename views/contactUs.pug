extends base.pug

block scripts 
    script(src='/static/script.js')
    
block style
    style
      include ../static/style.css
      include ../static/contactUsStyle.css


block content 
    nav#navbar
        ul
            div#logo
                img(src="/static/img/logo.png")
            li #[a(href="/") Home]
            li #[a(href="/about") About]
            li #[a(href="/services") Services]
            li #[a(href="/classInfo") Class Info]
            li #[a(href="/contactUs") Contact Us]

    div.container
      h1 Contact Us
      form(action="/contactUs", method="post", class="myForm")
        input(type="text", class="myInput", name="name", placeholder="Enter Your Name")
        input(type="phone", class="myInput", name="phone", placeholder="Enter Your Phone") 
        input(type="email", class="myInput", name="email", placeholder="Enter Your Email") 
        input(type="address", class="myInput", name="address", placeholder="Enter Your Address") 
        input(type="desc", class="myInput", name="desc", placeholder="Description") 
        button(class="btn") Submit
